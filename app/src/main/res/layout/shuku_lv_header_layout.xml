<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="16dp"
            android:background="@mipmap/search_tool_result_icon_book"/>
        <TextView
            android:id="@+id/tvtitle"
            style="@style/tvtop"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:id="@+id/tvcount"
            style="@style/tvtop"
            android:textColor="@android:color/holo_red_light"
            android:gravity="center_vertical"/>
        <TextView
            style="@style/tvtop"
            android:text="@string/cece"
            />
        <TextView
            android:id="@+id/tvnewcount"
            style="@style/tvtop"
            android:textColor="@android:color/holo_red_light"
            />
        <TextView
            style="@style/tvtop"
            android:text="@string/ce"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="@color/textunselectedcolor"
        />
    <GridView
        android:id="@+id/gvcategory"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:numColumns="2"
        android:stretchMode="columnWidth"
        android:verticalSpacing="0.4dp"
        android:horizontalSpacing="0.4dp"
        android:background="@color/textunselectedcolor"
        android:scrollbars="none"
        />
</LinearLayout>